---
import type { CollectionEntry } from "astro:content";
import readingTime from "reading-time";

interface Props {
	post: CollectionEntry<"blog">;
}
const { post } = Astro.props;
const time = readingTime(post.body);
---

<a class="flex mx-8 my-4" href={`/blog/${post.slug}`}>
	<div
		class="w-[200px] h-[100px] flex justify-center items-center rounded-lg shadow-lg dark:bg-zinc-700 bg-zinc-200"
	>
		{
			post.data.emoji != null ? (
				<span class="text-4xl">{post.data.emoji}</span>
			) : (
				""
			)
		}
	</div>
	<div class="flex flex-col justify-start items-start gap-1">
		<span
			class="ml-8 text-xl font-bold"
			transition:name={`blog-post-${post.slug}-title`}>{post.data.title}</span
		>
		<span class="ml-8" transition:name={`blog-post-${post.slug}-date`}
			>Published {post.data.date}</span
		>
		<span class="ml-8" transition:name={`blog-post-${post.slug}-time`}
			>{time.text}</span
		>
	</div>
</a>
